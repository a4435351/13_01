<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Color.fields">
        <div class="dropdown">
          <button id="btnShowName" class="btn btn-secondary dropdown-toggle dropBtn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Get Fields Name
          </button>
          <div id="hehe" class="dropdown-menu dropDownMenu" aria-labelledby="dropBtn">
              <t t-set="viewFields" t-value="widget.viewInfo.viewFields"/>
              <t t-foreach="viewFields" t-as="fieldName">
                  <t t-set="field" t-value="viewFields[fieldName]" />
                  <a class="dropdown-item" t-att-name="fieldName"><t t-esc="widget._get_node_string(fieldName)" /></a>
              </t>
          </div>
        </div>
    </t>
    <t t-extend="ListView.buttons">
        <t t-jquery=".o_list_export_xlsx" t-operation="after">
            <div class="btn-group o_dropdown su_fields_show list" groups="group_show_field">
                <div class="wAction">
                    <span class="fa fa-save span_save update_fields_show"></span>
                </div>
                <button class="btn btn-secondary dropdown-toggle su_btn-show-fields" id="btnShow"
                        data-toggle="dropdown" aria-expanded="true">
                    <span class="fa fa-foursquare"></span> Fields <span class="caret"></span>
                </button>
                <t t-set="_record" t-value="[]"/>
                <div id="haha" class="dropdown-menu" aria-labelledby="btnShow">
                    <div class="su_action">
                        <div>
                            <a title="Update" action="update" class="btn btn-default reset">
                                <i aria-label="Config" class="fa fa-refresh fa-1x fa-fw" role="img" title="Reset to default"></i>
                                <span class="sr-only">Update</span>
                            </a>
                        </div>
                    </div>
                    <div class="su_dropdown">
                        <ul id="ul_fields_show" role="menu">
                            <t t-foreach="widget.renderer.columns" t-as="field">
                                <li class="selected" t-att-name="field.attrs.name">
                                    <span class="span_ticked">&#xf00c;</span>
                                    <a><t t-esc="widget._get_node_string(field.attrs.name)" /></a>
                                    <input type="text" t-att-value="widget._get_node_string(field.attrs.name)" />
                                    <t t-set="record" t-value="_record.push(field.attrs.name)" />
                                </li>
                            </t>
                            <t t-foreach="widget.renderer.state.fields" t-as="field">
                                <t t-if="_record.indexOf(field) == -1">
                                    <li t-att-name="field">
                                        <span>&#xf00c;</span>
                                        <a>
                                            <t t-esc="widget.renderer.state.fields[field].string" />
                                        </a>
                                        <input type="text" t-att-value="widget.renderer.state.fields[field].string" />
                                    </li>
                                </t>
                            </t>
                        </ul>
                    </div>
                </div>
                <div class="wAction">
                    <span class="fa fa-check _applyAll"></span>
                    <span class="fa fa-tint span_color" title="Color tree">
                        <t t-raw="widget.renderColor()" />
                    </span>
                    <span class="fa fa-copy span_copy" title="Copy"></span>
                    <span class="fa fa-edit span_edit" title="Edit Mode"></span>
                </div>
            </div>
        </t>
    </t>

</templates>
